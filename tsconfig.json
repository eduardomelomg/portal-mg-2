    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"], // ðŸ‘ˆ permite usar process, fs, etc.
    "noUnusedLocals": false,
