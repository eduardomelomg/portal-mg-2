{
  "compilerOptions": {
    /* Diretórios */
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    /* Versão do JavaScript alvo */
    "target": "ES2020",
    "lib": ["ES2020"],

    /* Módulos e compatibilidade */
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],

    /* Geração de código */
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "strict": true,
    "noEmitOnError": true,

    /* Qualidade de código */
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Suporte a importações TS/JS modernas */
    "allowJs": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
