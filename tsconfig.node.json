{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "strict": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/services",
    "src/pages",
    "src/components",
    "src/hooks",
    "src/context"
  ]
}
