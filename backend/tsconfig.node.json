{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "strict": true,
    "noEmit": false,
    "noEmitOnError": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist", "node_modules"]
}
